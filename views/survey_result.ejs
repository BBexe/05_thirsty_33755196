<!doctype html>
<html>
  <head>
    <title>Survey Result - <%= shopName %></title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <!-- nav menu -->
    
    <header>
      <nav>
        <a href="/">Home</a>
        <a href="/about">About</a>
        <a href="/search">Search</a>
        <a href="/survey">Survey</a>
        <a href="/no-e-game">No-e Game</a>
        <a href="/register">Register</a>
      </nav>
    </header>

    <div class="container">
      <h1>Survey submission</h1>
      <!-- display what the user submitted -->
      <div class="result-box">
        <p><strong>Name:</strong> <%= submission.first %> <%= submission.last %></p>
        <p><strong>Email:</strong> <%= submission.email %></p>
        <p><strong>Age:</strong> <%= submission.age %></p>
        <p><strong>Category chosen:</strong> <%= submission.category %></p>
        <!-- show yes or no for student -->
        <p><strong>Student:</strong> <%= submission.isStudent ? 'Yes' : 'No' %></p>
      </div>
    </div>
  </body>
</html>
