<!doctype html>
<html>
  <head>
    <title>Welcome to <%=shopName%></title>
    <!-- link to stylesheet -->
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <!-- header with navigation menu -->
    <header>
      <nav>
        <a href="/">Home</a>
        <a href="/about">About</a>
        <a href="/search">Search</a>
        <a href="/survey">Survey</a>
        <a href="/no-e-game">No-e Game</a>
        <a href="/register">Register</a>
      </nav>
    </header>

    <!-- main content area -->
    <div class="container">
      <h1><%=shopName%> Shop</h1>
      <h2>Here are some things that we sell and we don't sell.</h2>
      <!-- loop through product categories -->
      <ul>
        <% for(let i = 0; i < productCategories.length; i++) { %>
          <li><%= productCategories[i] %></li>
        <% } %>
      </ul>
    </div>

  </body>
</html>
