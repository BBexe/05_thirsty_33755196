<!doctype html>
<html>
  <head>
    <title>Registered - <%= shopName %></title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <!-- nav bar -->
    <header>
      <nav>
        <a href="/">Home</a>
        <a href="/about">About</a>
        <a href="/search">Search</a>
        <a href="/survey">Survey</a>
        <a href="/no-e-game">No-e Game</a>
        <a href="/register">Register</a>
